<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_primary20"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible"
    android:orientation="vertical">


    <TextView
        android:id="@+id/lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="0dp"
        android:text="Language"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/sprache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:text="Sprache"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/язык"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="60dp"
        android:text="Язык"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <ImageButton
        android:id="@+id/imageButtonEnglish"
        android:layout_width="160dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/USA_Flag"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:layout_marginTop="0dp"/>

    <ImageButton
        android:id="@+id/imageButtonGerman"
        android:layout_width="160dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_margin="45dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/flag_of_germany"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        />

    <ImageButton
        android:id="@+id/imageButtonRussian"
        android:layout_width="160dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/Flag_of_Russia"
        android:paddingLeft="0dp"
        android:paddingBottom="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        />



</LinearLayout>